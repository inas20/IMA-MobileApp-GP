<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="application.mobileforms">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/skincare"
        android:label="@string/app_name"
        android:roundIcon="@drawable/skincare"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WelcomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Doctor_form"
            android:label="doctor_form"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".History"
            android:label="activity_history"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".Login" />
        <activity android:name=".DisplayImagesActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".PatientProfile_Activity" />
        <activity android:name=".Patient_personal_info"/>
        <activity android:name=".DoctorPersonal_Info"/>
        <activity android:name=".NamePassActivity"/>
        <activity android:name=".Doctor_Profile_Activity"/>
    </application>

</manifest>