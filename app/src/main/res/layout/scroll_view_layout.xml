<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="550dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/LastImageView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/editText"
            android:layout_marginStart="44dp"
            android:layout_marginTop="239dp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/textView17"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp" />
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignBottom="@+id/ColorView"
            android:layout_alignEnd="@+id/LastImageView"
            android:layout_marginRight="42dp"
            android:visibility="gone">

            <io.netopen.hotbitmapgg.library.view.RingProgressBar
                android:id="@+id/area_progress_bar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:visibility="visible"
                app:max="100"
                app:ringColor="@color/colorAccent"
                app:ringProgressColor="@color/colorAccentDark"
                app:ringWidth="3dp"
                app:style="STROKE"
                app:textColor="@color/colorPrimaryDark"
                app:textIsShow="true"
                app:textSize="16sp" />

            <io.netopen.hotbitmapgg.library.view.RingProgressBar
                android:id="@+id/color_progress_bar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:visibility="visible"
                app:max="100"
                app:ringColor="@color/colorAccent"
                app:ringProgressColor="@color/colorAccentDark"
                app:ringWidth="3dp"
                app:style="STROKE"
                app:textColor="@color/colorPrimaryDark"
                app:textIsShow="true"
                app:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>