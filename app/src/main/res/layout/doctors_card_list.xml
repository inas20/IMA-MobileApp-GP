<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    app:cardBackgroundColor="@color/colorAccentlight2"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp">
    <!--android:background="@color/colorAccentlight2"-->
    <!--android:foreground="@drawable/skincare"-->

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="56dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="130dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:layout_marginLeft="256dp"/>

    <TextView
        android:id="@+id/DocName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="@color/colorAccentDark2"
        android:textSize="30sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/DocAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="45dp"
            android:textColor="@color/colorAccentDark2"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/DocDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="80dp"
            android:textColor="@color/colorAccentDark2"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/DocTime"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:text="TextView"
            android:textColor="@color/colorAccentDark2"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/DocRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="155dp"
            android:textColor="@color/colorAccentDark2"
            android:textSize="18sp"/>

    </RelativeLayout>

    <!--<include-->
        <!--android:id="@+id/layout_card"-->
        <!--layout="@layout/recyclerview_items"-->
        <!--/>-->

</android.support.v7.widget.CardView>