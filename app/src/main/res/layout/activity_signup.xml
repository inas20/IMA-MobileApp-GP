    <EditText
        android:id="@+id/EditTextEmail"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="138dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/register_btn" />

    <TextView
        android:id="@+id/Signin_View"
        android:layout_width="297dp"
        android:layout_height="30dp"
        android:layout_below="@+id/register_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="41dp"
        android:text="Already Registered?Sign in"
        android:textAlignment="center"
        android:textColor="@color/colorAccentDark"
        android:textSize="20dp" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/EditTextpass"
        android:layout_below="@+id/EditTextpass"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="62dp"
        android:background="@color/colorAccent"
        android:text="Register"
        android:textColor="@color/colorAccentDark2"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/EditTextpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/EditTextEmail"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/register_dr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Signin_View"
        android:layout_below="@+id/Signin_View"
        android:layout_marginStart="68dp"
        android:layout_marginTop="17dp"
        android:text="Register as Doctor"
        android:textColor="@color/colorAccentDark"
        android:textSize="18sp" />

</RelativeLayout>
