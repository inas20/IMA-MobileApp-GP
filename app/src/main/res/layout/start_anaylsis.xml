<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="100"
    android:background="@color/colorAccentLight"
    android:focusableInTouchMode="false"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="60dp"
    android:layout_marginLeft="50dp">

    <io.netopen.hotbitmapgg.library.view.RingProgressBar
        android:id="@+id/area_progress_bar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:max="100"
        app:ringColor="@color/colorAccent"
        app:ringProgressColor="@color/colorAccentDark"
        app:ringWidth="3dp"
        app:style="STROKE"
        app:textColor="@color/colorPrimaryDark"
        app:textIsShow="true"
        app:textSize="16sp" />
    <io.netopen.hotbitmapgg.library.view.RingProgressBar
        android:id="@+id/color_progress_bar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:max="100"
        app:ringColor="@color/colorAccent"
        app:ringProgressColor="@color/colorAccentDark"
        app:ringWidth="3dp"
        app:style="STROKE"
        app:textColor="@color/colorPrimaryDark"
        app:textIsShow="true"
        app:textSize="16sp" />


    <io.netopen.hotbitmapgg.library.view.RingProgressBar
        android:id="@+id/progress_bar2"
        android:layout_width="40dp"
        android:layout_height="40dp"
     android:layout_marginTop="10dp"
        android:textAlignment="center"
        app:max="100"
        app:ringColor="@color/colorAccentDark"
        app:ringProgressColor="@color/colorAccent"
        app:ringWidth="3dp"
        app:style="STROKE"
        app:textColor="@color/colorPrimaryDark"
        app:textIsShow="true"
        app:textSize="16sp"


        />
</LinearLayout>
  

