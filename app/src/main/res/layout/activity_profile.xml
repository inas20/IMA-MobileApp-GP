<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccentlight2"
    android:orientation="vertical">
    tools:context="application.mobileforms.ProfileActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:foreground="@drawable/skincare"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


    <EditText
        android:id="@+id/NameEdit2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:hint="New Name"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/newPass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/NameEdit2"
        android:layout_below="@+id/NameEdit2"
        android:layout_marginTop="30dp"
        android:hint="New Password"
        android:inputType="textPassword"
        android:textSize="18sp" />

    <Button
        android:id="@+id/Update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/newPass"
        android:layout_alignStart="@+id/newPass"
        android:layout_below="@+id/newPass"
        android:layout_marginTop="72dp"
        android:background="@color/colorAccent"
        android:text="Change"
        android:textColor="@color/colorAccentDark" />

    <Button
        android:id="@+id/Add_Info"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/Update"
        android:layout_alignStart="@+id/Update"
        android:layout_below="@+id/Update"
        android:layout_marginTop="38dp"
        android:background="@color/colorAccent"
        android:text="ADD"
        android:textColor="@color/colorAccentDark" />

    <EditText
        android:id="@+id/NewEmail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/newPass"
        android:layout_alignStart="@+id/newPass"
        android:layout_below="@+id/newPass"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:visibility="gone" />

    <EditText
        android:id="@+id/PhoneNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/NewEmail2"
        android:layout_alignStart="@+id/NewEmail2"
        android:layout_below="@+id/NewEmail2"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="phone"
        android:visibility="gone" />

    <Button
        android:id="@+id/ViewInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Add_Info"
        android:layout_alignStart="@+id/Add_Info"
        android:layout_below="@+id/Add_Info"
        android:layout_marginTop="35dp"
        android:text="View User Information"
        android:visibility="gone" />


</RelativeLayout>